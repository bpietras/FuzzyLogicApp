<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/jpeg" href="@Url.Content("~/Content/Images/logo.jpg")" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

</head>
<body id="@ViewBag.CurrentPage">
    <div class="page">
        <header>

            <div id="title">
                <h1>@Resources.FuzzyLogicTitle</h1>
                    
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink(@Resources.HomeTab, "Index", "Home", null, new { @id = "home" })</li>
                    <li>@Html.ActionLink(@Resources.CreateModelTab, "Create", "CreateModel", null, new { @id = "create" })</li>
                    <li>@Html.ActionLink(@Resources.BrowseModelsTab, "BrowseModels", "CreateModel", null, new { @id = "browse" })</li>
                    <li>@Html.ActionLink(@Resources.Calculations, "ModelCalculation", "ModelCalculation", null, new { @id = "calculations" })</li>
                    @*<li>@Html.ActionLink(@Resources.HowTo, "HowTo", "Home", null, new { @id = "howto" })</li>*@
                    <li>@Html.ActionLink(@Resources.AboutFuzzyLogicTab, "About", "Home", null, new { @id = "about" })</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            @{
                ShareThisBuilder shareThisButtonSelection = new ShareThisBuilder();
                shareThisButtonSelection.AddButton(ShareThisButton.Email, "Email To Friends");
                shareThisButtonSelection.AddButton(ShareThisButton.Blogger);
                shareThisButtonSelection.AddButton(ShareThisButton.Delicious);
                shareThisButtonSelection.AddButton(ShareThisButton.Digg);
                shareThisButtonSelection.AddButton(ShareThisButton.LinkedIn);
                shareThisButtonSelection.AddButton(ShareThisButton.Google_Reader);
                shareThisButtonSelection.AddButton(ShareThisButton.ShareThis);
            }
            @ShareThisHelper.Render(shareThisButtonSelection)
            <div class="footer">
                &copy; 2015 Lodz University of Technology. All rights reserved.
                </div>
        </footer>
    </div>
</body>
</html>
