@model FuzzyLogicWebService.FISFiles.DBModel.FuzzyModel

@{
    ViewBag.Title = "Add Variables";
}

<h2>AddVariables</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AddInputVariables", "CreateModel"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Fuzzy Model add variables</legend>

        @for (var i = 0; i < Model.InputsNumber;i++ )
        {
            <div class="editor-label">
            @Html.LabelFor(model => model.InputVariables.ElementAt(i).Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InputVariables.ElementAt(i).Name)
            @Html.ValidationMessageFor(model => model.InputVariables.ElementAt(i).Name)
        </div>
            
            <div class="editor-label">
            @Html.LabelFor(model => model.InputVariables.ElementAt(i).Type)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InputVariables.ElementAt(i).Type)
            @Html.ValidationMessageFor(model => model.InputVariables.ElementAt(i).Type)
        </div>
        }

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}


