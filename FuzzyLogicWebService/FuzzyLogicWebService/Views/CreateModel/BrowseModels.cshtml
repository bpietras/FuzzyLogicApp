@model IQueryable<FuzzyLogicModel.FuzzyModel>

@{
    ViewBag.Title = @Resources.ListOfModels;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table border="1" style="width:100%">

        <tr>
          <td><b>@Resources.ModelName</b></td>
          <td style="width: 20%"><b>@Resources.ModelDescription</b></td>
          <td><b>@Resources.Inputs</b></td>
          <td><b>@Resources.Outputs</b></td>
          <td><b>@Resources.Rules</b></td>
          <td><b>@Resources.SeeDetails</b></td>
          <td><b>@Resources.UseModel</b></td>
        </tr>

    @foreach (var m in Model)
    {
        <tr>
          <td><b>@m.Name</b></td>
          <td style="width: 20%">@m.Description</td>
          <td>@m.InputsNumber</td>
          <td>@m.OutputsNumber</td>
          <td>@m.RulesNumber</td>
          <td>@Html.ActionLink(@Resources.SeeDetails, "ModelDetails", "CreateModel", new { modelId = m.ModelID }, null)</td>
          <td>@Html.ActionLink(@Resources.UseThisModel, "ModelCalculation", "ModelCalculation", new { modelId = m.ModelID }, null)</td>
          <td>
                @using(Html.BeginForm("Delete", "CreateModel")){
                    @Html.Hidden("ModelID",m.ModelID)
                    <input type="submit" value="@Resources.Delete" />
                }
          </td>
        </tr>
    }
</table>


    <script>
        $('form[action$="/Delete"]').submit(function () {
            return confirm('Czy chcesz usunąć model?');
        });
</script>