@model IQueryable<FuzzyLogicWebService.FISFiles.DBModel.FuzzyModel>

@{
    ViewBag.Title = "BrowseModels";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.UserName, these are your models</h2>
<table border="1" style="width:100%">

        <tr>
          <td><b>Name</b></td>
          <td><b>Description</b></td>
          <td><b>Number of inputs variables</b></td>
          <td><b>Number of output variables</b></td>
          <td><b>Number of rules</b></td>
          <td><b>Details</b></td>
          <td><b>Get Matlab file</b></td>
          <td><b>Delete</b></td>
        </tr>

    @foreach (var m in Model)
    {
        <tr>
          <td><b>@m.Name</b></td>
          <td>@m.Description</td>
          <td>@m.InputsNumber</td>
          <td>@m.OutputsNumber</td>
          <td>@m.RulesNumber</td>
          <td>@Html.ActionLink("See model details", "ModelDetails", "CreateModel", null, new { model = m })</td>
          <td>@Html.ActionLink("Generate .fis file","SaveFileLocally", "Home",null,new {model = m})</td>
          <td>@Html.ActionLink("Delete model", "Delete", "CreateModel", new { modelID = m.ModelID })</td>
        </tr>
    }
</table>